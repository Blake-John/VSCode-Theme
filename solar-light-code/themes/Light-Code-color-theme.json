{
	"name": "Light-Code",
	"colors": {
		// 代码区背景色
		"editor.background": "#f7efdb", // 编辑器背景
		"editor.foreground": "#333333", // 编辑器前景
        "list.activeSelectionIconForeground": "#fff",

		//光标行及选中
		"editor.selectionBackground": "#e6dec4c5", // 选择区域颜色
		"editor.lineHighlightBackground": "#e6dec48e", // 光标所在行
		// "editor.selectionHighlightBackground": "#e6dec4",


		// 悬浮菜单
		"menu.background": "#eee8d5", // 顶部菜单栏背景
		"menu.selectionBackground": "#e1dac0", // 鼠标悬停块
		"menu.selectionForeground": "#777777",

		// 底部状态栏
		"statusBar.foreground": "#5b5711", // 前景色-字体
		"statusBar.background": "#eee8d5", // 背景色
		// "statusBar.border": "#d1ccbc", // 底部栏分隔线
		"statusBarItem.hoverBackground": "#d7d1be", // 鼠标悬停背景色
		"statusBarItem.activeBackground": "#cac4b2", // 鼠标单击时颜色
		"statusBarItem.remoteBackground": "#d3c9a6", // remote背景色
		"statusBarItem.remoteForeground": "#414b75", // remote前景色
		"statusBar.debuggingBackground": "#ef9643", // debug模式下底部栏背景色
		"statusBar.debuggingForeground": "#000000", // debug模式下底部栏字体颜色
		"statusBar.noFolderBackground": "#eee8d5", // 没有文件夹时的颜色

		// 顶部栏标签栏
		"editorGroup.dropBackground": "#e8e1c96b", // 拖动分屏颜色
        "editorGroup.border": "#c8bd9c", // 分屏边界线
		"tab.hoverBackground": "#e7dfcc", // 标签悬浮颜色
		"tab.inactiveBackground": "#D9D2C2", // 非活动标签颜色
		"tab.inactiveForeground": "#000000", // 非活动标签字体色
		"titleBar.activeBackground": "#eee8d5", // 最顶部颜色
        "editorGroupHeader.tabsBackground": "#D9D2C2", // 标签组背景色


		// 悬浮框
		"editorHoverWidget.background": "#ddd6c1", // 鼠标悬停悬浮框背景色

		// 左侧栏
		"activityBar.background": "#ddd6c1", // 左侧标签栏背景色
		"activityBar.foreground": "#584c27", // 活动图标颜色
		"activityBarBadge.background": "#beb28e", // 角标颜色
		"sideBar.background": "#ece5cf", // 左侧工具栏背景色

		// 左侧列表
		"list.activeSelectionBackground": "#dad2bc", // 选中的颜色
		"list.activeSelectionForeground": "#606060", // 选中的字体颜色
		"list.focusAndSelectionOutline": "#dad2bc", // 选中的边框颜色
		// "list.hoverBackground": "#f7efd8", // 鼠标悬浮颜色
		"list.hoverBackground": "#e0d9c6", 
		"list.dropBackground": "#dad2bc", // 拖放目标颜色
		"list.inactiveSelectionBackground": "#e0d9c6", // 非激活颜色
		"focusBorder": "#b49471", // 焦点元素边框
        // "list.highlightForeground": "#B58900",


		// 按钮颜色
		"button.background": "#ef9643",

		// 输入框
		"input.background": "#DDD6C1", // 输入框前景色
		"input.foreground": "#586E75", // 输入框背景色
		"input.placeholderForeground": "#586E75AA", // 输入框占位符颜色
        "badge.background": "#cabe9baa", // 搜索数字标签背景色

		// 下拉列表
        "dropdown.background": "#EEE8D5",
        "dropdown.border": "#D3AF86",

		// 编辑器组件如搜索，debug栏
        "editorWidget.background": "#f0e9d1",
		"debugToolBar.background": "#DDD6C1",
        "debugExceptionWidget.background": "#DDD6C1",
        "debugExceptionWidget.border": "#AB395B",


		// 小地图
		"minimap.selectionHighlight": "#dad2bc",
		"minimapSlider.activeBackground": "#cac3b054",
		"minimapSlider.hoverBackground": "#cac3b054",
		"minimapSlider.background": "#cac3b054",



	},
	"semanticTokenColors": {
		"namespace": "#c86f09",
		"function": "#268BD2"
	},
	
	"tokenColors": [
		{
			"name": "Comments",
			"scope": [
				"comment",
				"punctuation.definition.comment"
			],
			"settings": {
				"fontStyle": "italic",
				"foreground": "#777777"
			}
		},
		{
			"name": "Comments: Preprocessor",
			"scope": "comment.block.preprocessor",
			"settings": {
				"fontStyle": "",
				"foreground": "#777777"
			}
		},
		{
			"name": "Comments: Documentation",
			"scope": [
				"comment.documentation",
				"comment.block.documentation"
			],
			"settings": {
				"foreground": "#448C27"
			}
		},
		{
			"name": "Invalid - Illegal",
			"scope": "invalid.illegal",
			"settings": {
				"foreground": "#660000"
			}
		},
		{
			"name": "Operators",
			"scope": [
				"keyword.operator.arithmetic",
				"keyword.operator.assignment",
				"keyword.operator.logical",
				"keyword.operator.bitwise.shift"
			],
			"settings": {
				"foreground": "#CB4B16"
			}
		},
		{
			"name": "Keywords",
			"scope": [
				"keyword",
				"storage"
			],
			"settings": {
				"foreground": "#d33682",
				"fontStyle": "bold"
			}
		},
		{
			"name": "Types",
			"scope": [
				"storage.type",
				"support.type"
			],
			"settings": {
				"foreground": "#d39f03"
			}
		},
		{
			"name": "Language Constants",
			"scope": [
				"constant.language",
				"support.constant",
				"variable.language"
			],
			"settings": {
				"foreground": "#AB6526"
			}
		},
		{
			"name": "Variables",
			"scope": [
				"variable.other",
				// "variable",
				// "support.variable"
			],
			"settings": {
				"foreground": "#2AA198",
				"fontStyle": "bold"
			}
		},
		{
			"name": "Functions",
			"scope": [
				"entity.name.function",
				"support.function"
			],
			"settings": {
				"fontStyle": "bold",
				"foreground": "#268BD2"
			}
		},
		{
			"name": "Classes",
			"scope": [
				"entity.name.type",
				"entity.other.inherited-class",
				"support.class"
			],
			"settings": {
				"fontStyle": "bold",
				"foreground": "#d39f03"
			}
		},
		{
			"name": "ClassDefinitionKeyword",
			"scope": [
				"storage.type.class",
				"storage.type.struct"
			],
			"settings": {
				"foreground": "#d33682",
				"fontStyle": "bold"
			}
		},
		{
			"name": "public, private, protected",
			"scope": [
				"storage.type.modifier.access.control.public",
				"storage.type.modifier.access.control.private",
				"storage.type.modifier.access.control.protected"

			],
			"settings": {
				"foreground": "#d33682",
				"fontStyle": "bold"
			}
		},
		{
			"name": "Exceptions",
			"scope": "entity.name.exception",
			"settings": {
				"foreground": "#660000"
			}
		},
		{
			"name": "Sections",
			"scope": "entity.name.section",
			"settings": {
				"fontStyle": "bold"
			}
		},
		{
			"name": "Strings",
			"scope": "string",
			"settings": {
				"foreground": "#448C27"
			}
		},
		{
			"name": "Strings: Escape Sequences",
			"scope": "constant.character.escape",
			"settings": {
				"foreground": "#AB6526"
			}
		},
		{
			"name": "Strings: Regular Expressions",
			"scope": "string.regexp",
			"settings": {
				"foreground": "#4B83CD"
			}
		},
		{
			"name": "Strings: Symbols",
			"scope": "constant.other.symbol",
			"settings": {
				"foreground": "#AB6526"
			}
		},
		{
			"name": "Numbers",
			"scope": [
				"constant.numeric",
				"constant"
			],
			"settings": {
				"foreground": "#6C71C4"
			}
		},
		{
			"name": "characters, language, other",
			"scope": [
				"constant.character",
				"constant.other",
				"constant.language"
			],
			"settings": {
				"fontStyle": "bold",
				"foreground": "#CB4B16"
			}
		},
		{
			"name": "Punctuation",
			"scope": [
				// "punctuation",
				"meta.block"
			],
			"settings": {
				"foreground": "#777777"
			}
		},
		{
			"name": "right left shift",
			"scope": [
				"keyword.operator.bitwise.shift",
				"keyword.operator.bitwise.shift",
			],
			"settings": {
				"foreground": "#CB4B16",
				"fontStyle": "bold"
			}
		},
		// {
		// 	"name": "cout cin",
		// 	"scope": "meta.body.function.definition",
		// 	"settings": {
		// 		"foreground": "#FF0000",
		// 		"fontStyle": "bold"
		// 	}
		// },
		{
			"name": "const",
			"scope": "storage.modifier",
			"settings": {
				"foreground": "#CB4B16",
				"fontStyle": "bold"
			}
		},
		{
			"name": "HTML: Doctype Declaration",
			"scope": [
				"meta.tag.sgml.doctype",
				"meta.tag.sgml.doctype string",
				"meta.tag.sgml.doctype entity.name.tag",
				"meta.tag.sgml punctuation.definition.tag.html"
			],
			"settings": {
				"foreground": "#AAAAAA"
			}
		},
		{
			"name": "HTML: Tags",
			"scope": [
				"meta.tag",
				"punctuation.definition.tag.html",
				"punctuation.definition.tag.begin.html",
				"punctuation.definition.tag.end.html"
			],
			"settings": {
				"foreground": "#91B3E0"
			}
		},
		{
			"name": "HTML: Tag Names",
			"scope": "entity.name.tag",
			"settings": {
				"foreground": "#4B83CD"
			}
		},
		{
			"name": "HTML: Attribute Names",
			"scope": [
				"meta.tag entity.other.attribute-name",
				"entity.other.attribute-name.html"
			],
			"settings": {
				"fontStyle": "italic",
				"foreground": "#91B3E0"
			}
		},
		{
			"name": "HTML: Entities",
			"scope": [
				"constant.character.entity",
				"punctuation.definition.entity"
			],
			"settings": {
				"foreground": "#AB6526"
			}
		},
		{
			"name": "CSS: Selectors",
			"scope": [
				"meta.selector",
				"meta.selector entity",
				"meta.selector entity punctuation",
				"entity.name.tag.css"
			],
			"settings": {
				"foreground": "#7A3E9D"
			}
		},
		{
			"name": "CSS: Property Names",
			"scope": [
				"meta.property-name",
				"support.type.property-name"
			],
			"settings": {
				"foreground": "#AB6526"
			}
		},
		{
			"name": "CSS: Property Values",
			"scope": [
				"meta.property-value",
				"meta.property-value constant.other",
				"support.constant.property-value"
			],
			"settings": {
				"foreground": "#448C27"
			}
		},
		{
			"name": "CSS: Important Keyword",
			"scope": "keyword.other.important",
			"settings": {
				"fontStyle": "bold"
			}
		},
		{
			"name": "Markup: Changed",
			"scope": "markup.changed",
			"settings": {
				"foreground": "#000000"
			}
		},
		{
			"name": "Markup: Deletion",
			"scope": "markup.deleted",
			"settings": {
				"foreground": "#000000"
			}
		},
		{
			"name": "Markup: Emphasis",
			"scope": "markup.italic",
			"settings": {
				"fontStyle": "italic"
			}
		},
		{
			"name": "Markup: Error",
			"scope": "markup.error",
			"settings": {
				"foreground": "#660000"
			}
		},
		{
			"name": "Markup: Insertion",
			"scope": "markup.inserted",
			"settings": {
				"foreground": "#000000"
			}
		},
		{
			"name": "Markup: Link",
			"scope": "meta.link",
			"settings": {
				"foreground": "#4B83CD"
			}
		},
		{
			"name": "Markup: Output",
			"scope": [
				"markup.output",
				"markup.raw"
			],
			"settings": {
				"foreground": "#777777"
			}
		},
		{
			"name": "Markup: Prompt",
			"scope": "markup.prompt",
			"settings": {
				"foreground": "#777777"
			}
		},
		{
			"name": "Markup: Heading",
			"scope": "markup.heading",
			"settings": {
				"foreground": "#AA3731"
			}
		},
		{
			"name": "Markup: Strong",
			"scope": "markup.bold",
			"settings": {
				"fontStyle": "bold"
			}
		},
		{
			"name": "Markup: Traceback",
			"scope": "markup.traceback",
			"settings": {
				"foreground": "#660000"
			}
		},
		{
			"name": "Markup: Underline",
			"scope": "markup.underline",
			"settings": {
				"fontStyle": "underline"
			}
		},
		{
			"name": "Markup Quote",
			"scope": "markup.quote",
			"settings": {
				"foreground": "#7A3E9D"
			}
		},
		{
			"name": "Markup Lists",
			"scope": "markup.list",
			"settings": {
				"foreground": "#4B83CD"
			}
		},
		{
			"name": "Markup Styling",
			"scope": [
				"markup.bold",
				"markup.italic"
			],
			"settings": {
				"foreground": "#448C27"
			}
		},
		{
			"name": "Markup Inline",
			"scope": "markup.inline.raw",
			"settings": {
				"fontStyle": "",
				"foreground": "#AB6526"
			}
		},
		{
			"name": "Extra: Diff Range",
			"scope": [
				"meta.diff.range",
				"meta.diff.index",
				"meta.separator"
			],
			"settings": {
				"foreground": "#434343"
			}
		},
		{
			"name": "Extra: Diff From",
			"scope": "meta.diff.header.from-file",
			"settings": {
				"foreground": "#434343"
			}
		},
		{
			"name": "Extra: Diff To",
			"scope": "meta.diff.header.to-file",
			"settings": {
				"foreground": "#434343"
			}
		}
	]
